<div class="container">
    <div class="locales">
        <a href="/home/fr">FR</a> - <a href="/home/en">EN</a>
    </div>
    <div class="hero-unit">
        <h1>{{labels.title}}</h1>
        {{labels.subtitle}}
    </div>

    <h2>{{labels.step1}}</h2>

    <div class="bloc-streams-list"></div>
    <div class="row-fluid">
        {{#with labels.form}}
        <div class="offset1 span10 bloc-search form-inline well">
            <div class="input-append">
                <input type="text" class="span11" placeholder="{{searchPlaceHolder}}" value="*"/>
                <button class="btn" data-mode="meta">{{searchMeta}}</button>
                <button class="btn" data-mode="field">{{searchField}}</button>
                <button class="btn" data-mode="id">{{searchId}}</button>
                <button class="btn btn-inverse" data-close>X</button>
            </div>
            <div class="bloc-search-list"></div>
        </div>
        {{/with}}
    </div>
    <h2>{{labels.step2}}</h2>

    <div>
        <div class="tabbable tabs-left"> <!-- Only required for left/right tabs -->
            <ul class="nav nav-tabs">
                <li class="active"><a href="">{{labels.options.join}}</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active bloc-join">
                </div>
            </div>
        </div>
    </div>
</div>