{{#if collection}}
    {{#each collection}}
        <div class="row-fluid">
            <button class="btn btn-large span1 btn-warning" data-add="{{this._id}}">
                <i class="icon-plus"></i>
            </button>
            <div class="span6">
                <strong>{{name}}</strong>
                {{../labels.search.by}} {{user.firstname}} {{user.lastname}}<br/>
                {{desc}}
            </div>
        </div>
    {{/each}}
{{/if}}